#filename kivytest.kv

<TheGrid>:
	encode: encode
	decode: decode
	result: result

	GridLayout:
		cols:1
		size:root.width, root.height

		GridLayout:
			cols:1
			Label:
				text: "What do you want to Encrypt?"
			TextInput:
				id: encode
				multiline:False
			Button:
				on_press: root.encbtn()
				text: "En-CODE"

			TextInput:
				id: result
				multiline:False

		GridLayout:
			size:root.width - 300, root.height - 300
			cols:1
			Label:
				text: "Decode"
			TextInput:
				id: decode
				multiline:False
			Button:
				on_press: root.decbtn()
				text: "De_CODE"
